    <script>
        // Проверка доступа по паролю
        function checkAccess() {
            const password = document.getElementById('passwordInput').value;
            const errorMessage = document.getElementById('errorMessage');
            const successMessage = document.getElementById('successMessage');
            
            // Скрываем сообщения
            errorMessage.style.display = 'none';
            successMessage.style.display = 'none';
            
            // Проверка пароля
            if (password.toUpperCase() === 'ALPHA-DELTA-ZERO') {
                // Правильный пароль
                successMessage.style.display = 'block';
                
                setTimeout(() => {
                    document.getElementById('accessContainer').style.display = 'none';
                    document.getElementById('secretContent').style.display = 'block';
                }, 2000);
            } else {
                // Неправильный пароль
                errorMessage.style.display = 'block';
                document.getElementById('passwordInput').value = '';
                
                // Добавляем анимацию "тряски" при ошибке
                const accessContainer = document.getElementById('accessContainer');
                accessContainer.style.animation = 'shake 0.5s';
                setTimeout(() => {
                    accessContainer.style.animation = '';
                }, 500);
            }
        }
        
        // Выход из системы
        function logout() {
            document.getElementById('secretContent').style.display = 'none';
            document.getElementById('accessContainer').style.display = 'block';
            document.getElementById('passwordInput').value = '';
            
            // Скрываем сообщения
            document.getElementById('errorMessage').style.display = 'none';
            document.getElementById('successMessage').style.display = 'none';
        }
        
        // Копирование ссылки
        function copyLink() {
            const tempInput = document.createElement('input');
            tempInput.value = window.location.href;
            document.body.appendChild(tempInput);
            tempInput.select();
            document.execCommand('copy');
            document.body.removeChild(tempInput);
            
            alert('Ссылка скопирована в буфер обмена!');
        }
        
        // Поделиться через Web Share API
        function sharePage() {
            if (navigator.share) {
                navigator.share({
                    title: 'Секретный документ ФОЗ',
                    text: 'Доступ к секретному документу Военно-Космического Флота Федерации Объединённой Земли',
                    url: window.location.href
                })
                .catch(error => {
                    console.log('Ошибка при использовании Web Share API:', error);
                    copyLink();
                });
            } else {
                copyLink();
            }
        }
        
        // Добавляем обработчик события для нажатия Enter в поле пароля
        document.getElementById('passwordInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                checkAccess();
            }
        });
        
        // Добавляем CSS анимацию для тряски
        const style = document.createElement('style');
        style.textContent = `
            @keyframes shake {
                0% { transform: translateX(0); }
                20% { transform: translateX(-10px); }
                40% { transform: translateX(10px); }
                60% { transform: translateX(-10px); }
                80% { transform: translateX(10px); }
                100% { transform: translateX(0); }
            }
        `;
        document.head.appendChild(style);
    </script>
